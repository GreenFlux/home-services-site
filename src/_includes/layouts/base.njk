    <!-- Scroll Animation Script -->
    <script>
        // Intersection Observer for scroll animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    // Add stagger delay for multiple elements
                    if (entry.target.classList.contains('stagger-animation')) {
                        const order = entry.target.style.getPropertyValue('--animation-order') || index;
                        entry.target.style.setProperty('--animation-order', order);
                    }
                    
                    setTimeout(() => {
                        entry.target.classList.add('visible');
                    }, 50);
                    
                    // Stop observing once animated
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);
        
        // Observe all elements with animation classes
        document.addEventListener('DOMContentLoaded', () => {
            const animatedElements = document.querySelectorAll('.animate-on-scroll, .slide-in-left, .slide-in-right');
            animatedElements.forEach((el, index) => {
                if (el.classList.contains('stagger-animation')) {
                    el.style.setProperty('--animation-order', index);
                }
                observer.observe(el);
            });
        });
    </script>
    
