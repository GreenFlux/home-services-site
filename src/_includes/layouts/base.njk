<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if title %}{{ title }} | {% endif %}{{ site.title }}</title>
    <meta name="description" content="{{ description or site.description }}">
    
    <!-- SEO Meta Tags -->
    <meta name="keywords" content="{{ keywords or 'home repair, plumbing, electrical, HVAC, handyman, maintenance, local repair services' }}">
    <link rel="canonical" href="{{ site.url }}{{ page.url }}">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="{% if title %}{{ title }} | {% endif %}{{ site.title }}">
    <meta property="og:description" content="{{ description or site.description }}">
    <meta property="og:type" content="{{ ogType or 'website' }}">
    <meta property="og:url" content="{{ site.url }}{{ page.url }}">
    <meta property="og:image" content="{{ ogImage or (site.url + '/assets/images/og-default.jpg') }}">
    <meta property="og:site_name" content="{{ site.title }}">
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{% if title %}{{ title }} | {% endif %}{{ site.title }}">
    <meta name="twitter:description" content="{{ description or site.description }}">
    <meta name="twitter:image" content="{{ twitterImage or ogImage or (site.url + '/assets/images/og-default.jpg') }}">
    
    <!-- Structured Data for Local Business -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "{{ site.title }}",
      "description": "{{ site.description }}",
      "url": "{{ site.url }}",
      "telephone": "{{ site.contact.phone }}",
      "email": "{{ site.contact.email }}",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "{{ site.contact.address }}",
        "addressLocality": "Your City",
        "addressRegion": "Your State",
        "postalCode": "12345",
        "addressCountry": "US"
      },
      "openingHours": "{{ site.contact.hours }}",
      "priceRange": "$$",
      "image": "{{ site.url }}/assets/images/logo.jpg"
    }
    </script>
